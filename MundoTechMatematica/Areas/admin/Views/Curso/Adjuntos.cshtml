@model List<MundoTechMatematica.Models.CursoImagen>


<div class="row">
    @foreach (var i in Model)
    {
        <div class="col-xs-6 col-md-3">
            <a href="~/ImgCursos/@i.Imagen" class="thumbnail" target="_blank">
                <img src="~/ImgCursos/@i.Imagen" alt="ejemplo">
            </a>
            <p class="text-center"><a href="#" class="btn btn-danger" role="button" onclick="EliminarImagen(@i.CursoImagenId)">Eliminar</a></p>
        </div>
    }
</div>

